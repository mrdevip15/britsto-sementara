                        <div class="card-header">
                            <i data-feather="lock" class="me-2"></i>
                            Password Management
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <h6>Change Password</h6>
                                    <p class="text-muted small">Update your current password</p>
                                    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
