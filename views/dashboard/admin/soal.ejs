            document.addEventListener('DOMContentLoaded', () => {
    // Get the URL parameters
    const urlParams = new URLSearchParams(window.location.search);
    const message = urlParams.get('message'); // Get the 'message' parameter

    if (message) {
        // Determine the type of alert (success or danger)
        const isDelete = message.toLowerCase().includes('hapus'); // Check if the message indicates a delete
        const alertClass = isDelete ? 'alert-danger' : 'alert-success'; // Set the class accordingly
        const iconClass = 'fa-check-circle'; // Set the Font Awesome icon

        // Get the existing alert element
        const alertDiv = document.querySelector('.alert');

        if (alertDiv) {
            // Update the alert's class and content
            alertDiv.className = `alert ${alertClass} alert-icon`; // Update class
            alertDiv.innerHTML = `
                <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                <div class="alert-icon-aside">
                    <i class="far ${iconClass}"></i>
                </div>
                <div class="alert-icon-content">
                   
                    ${message}
                </div>
            `; // Update the content
        }
    } else {
        // Hide the alert if no message is present in the URL
        const alertDiv = document.querySelector('.alert');
        if (alertDiv) {
            alertDiv.style.display = 'none';
        }
    }
});

        </script>
        <script>
function deleteItem(event, url) {

    event.preventDefault(); // Prevent the default link behavior

    const userConfirmed = confirm('Are you sure you want to delete this item?');
    if (userConfirmed) {
        fetch(url, {
            method: 'DELETE',
        })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Failed to delete item');
                }
                return response.json(); // Parse the JSON response
            })
            .then(data => {
             
                // Redirect or update UI as needed
                window.location.href = `/admin/manajemen-soal/mapel/${data.kodekategori}?message=${encodeURIComponent(data.message)}`;
            })
            .catch(error => console.error('Error:', error));
    }
}


