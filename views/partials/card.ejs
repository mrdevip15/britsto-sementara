<div class="col <%= card.extraClass || '' %>">
    <div class="card <%= card.borderClass || 'border-0' %> h-100" style="<%= card.style || '' %>">
        <div class="card-body d-flex flex-column justify-content-between p-4">
            <% if (card.badge) { %>
                <span class="badge position-absolute top-0 end-0 rounded-bottom-left text-uppercase" style="background: <%= card.badgeColor || 'var(--bs-primary)' %>;"
                    <%= card.badge %>
                </span>
            <% } %>
            <div style="color: black;">
                <h6 class="fw-bold text-muted"><%= card.title %></h6>
                <h4 class="display-5 fw-bold mb-4"><%= card.price %></h4>
                <ul class="list-unstyled">
                    <% card.features.forEach(feature => { %>
                        <li class="d-flex mb-2">
                            <span class="bs-icon-xs bs-icon-rounded bs-icon me-2">
                                <% if (feature.included) { %>
                                    <svg xmlns="https://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icon-tabler-check" style="color: var(--bs-form-valid-color);">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M5 12l5 5l10 -10"></path>
                                    </svg>
                                <% } else { %>
                                    <svg xmlns="https://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icon-tabler-x" style="color: var(--bs-danger);"
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M18 6l-12 12"></path>
                                        <path d="M6 6l12 12"></path>
                                    </svg>
                                <% } %>
                            </span>
                            <span><%= feature.text %></span>
                        </li>
                    <% }) %>
                </ul>
            </div>
            <a class="btn btn-primary" role="button" href="<%= card.link %>">
                Mulai Belajar
            </a>
        </div>
    </div>
</div>
